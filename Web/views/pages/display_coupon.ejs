<!DOCTYPE html>
<html>
<head>
  <% include ../partials/header.ejs %>
</head>

<body>

  <% include ../partials/navbar.ejs %>

<div class="jumbotron text-center">
  <div class="container">
    <h1><%= coupon.storeName %></h1>
    <h2><%=coupon.category%></h2>
    <p><%=coupon.description %></p>
    <h2><%=coupon.price%> credits</h2>
    <% if(typeof(coupon.expirationDate) !== 'undefined') {%>
    <h2> Expires <%=coupon.expirationDate %></h2>
    <% } %>
  </div>
</div>

<% if(coupon.additionalInfo.length > 0) {%>
<div class="container">
  <div class="alert alert-info text-center" role="alert">
      <%=coupon.additionalInfo %>
  </div>
</div>
<% } %>

<form action="/coupons/purchaseCoupon" method="post">
  <input type="hidden" id="id" name="id" value=<%=coupon.id %>>
  <div class="row">
    <div class="text-center">
      <button type="submit" class="btn btn-success">Buy!</button>
    </div>
  </div>


</body>
</html>
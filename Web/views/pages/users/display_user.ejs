    <h2>Seller rating: <%=100*score%>%</h2>
  </div>

  <div class="row">
    <div class="col-sm-3"></div>
    <div class="col-sm-6">
      <div class="text-center">
        <a type="button" style="background-color:#77C9D4" class="btn-primary btn-lg btn-block" href="/users/viewComments?id=<%=displaying.id%>">Feedback</a>

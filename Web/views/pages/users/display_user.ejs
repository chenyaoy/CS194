<html>
<head>
  <% include ../../partials/header.ejs %>
</head>

<body>

  <% include ../../partials/navbar.ejs %>

<div class="jumbotron text-center">
  <div class="container">
    <% if(user.id == displaying.id) {%>
      <h1><%=displaying.get("displayName")%></h1>
    <% } else { %>
      <h1><%=displaying.get("username")%></h1>
    <% } %>

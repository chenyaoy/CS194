      <div class="text-center">
        <a type="button" class="btn-primary btn-lg btn-block" href="/users/myCoupons/purchased">Purchased</a>
      </div>
    </div>
    <div class="col-sm-2">
      <div class="text-center">
        <a type="button" class="btn-primary btn-lg btn-block" href="/users/myCoupons/selling">Selling</a>
      </div>
    </div>
    <div class="col-sm-2">
      <div class="text-center">
        <a type="button" class="btn-primary btn-lg btn-block" href="/users/myCoupons/sold">Sold</a>
      </div>
    </div>
  <div class="col-sm-3"></div>
</div>

